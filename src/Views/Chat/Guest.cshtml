@page
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
	<div class="mt-5">
		<input type="hidden" id="userName" value="@ViewBag.GuestName" />
		<label for="message">Message: </label>
		<input type="text" id="message" maxlength="199" />
		<input type="button" id="send" value="Send" />
		<input name="file" id="fileInput" type="file" multiple>
		<button id="sendFile">Send File</button>
		<div class="recording-controls">
			<button id="startRecording" class="btn btn-danger">Start Recording</button>
			<button id="stopRecording" class="btn btn-secondary">Stop Recording</button>
			<button id="sendRecording" class="btn btn-primary" style="display: none;">Send Recording</button>
			<audio id="audioPlayer" controls class="mt-3"></audio>
		</div>
	</div>

	<div id="messages">
		<ul id="messagesList"></ul>
	</div>
</div>

<script src="~/lib/signalr.js"></script>

<script src="~/js/guest.js"></script>

